{
    "name": "local-pc-backend",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "npm run install-frontend && npm run build-frontend && rm -rf dist && mkdir -p dist && cp -r textgpt/dist/* dist/",
        "install-frontend": "cd textgpt && npm install",
        "build-frontend": "cd textgpt && npm run build"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.18.2",
        "fs-extra": "^11.1.1",
        "mongoose": "^8.21.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.1"
    }
}